cxx.std = latest

using cxx
using c

hxx{*}: extension = hpp
ixx{*}: extension = ipp
txx{*}: extension = tpp
cxx{*}: extension = cpp

# Assume headers are importable unless stated otherwise.
#
hxx{*}: cxx.importable = true

# The test target for cross-testing (running tests under Wine, etc).
test.target = $cxx.target

source build/sfml_common.build
config [string] config.sfml_window.platform ?= $sfml_platform
config [bool] config.sfml_window.use_opengles ?= $sfml_use_opengles